<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tap_AppCompatButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tap_me"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/state_TextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/tap_AppCompatButton"
            app:layout_constraintStart_toStartOf="@id/tap_AppCompatButton"
            app:layout_constraintTop_toBottomOf="@id/tap_AppCompatButton"
            tools:text="STATE" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>